<h3>Wine:</h3>
<%= form_with(model: wine, local: true) do |form| %>
  <% if wine.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(wine.errors.count, "error") %> prohibited this wine from being saved:</h2>

      <ul>
        <% wine.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :year %>
    <%= form.number_field :year %>
  </div>

  <h3>Strains:</h3>
  <div id='wine_strains'>
    <%= form.fields_for :wines_strains do |wine_strain_form| %>
      <%= render 'wine_strain_fields', :f => wine_strain_form %>
    <% end %>
    <div class='links'>
      <%= link_to_add_association 'Add strain', form, :wine_strains %>
    </div>
  </div> 

  <br>
  
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
